<div class="body">
    <div class= "container">
       <div class="row">
        <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
<% end %>
          <%= render partial: 'users/sidebar',locals: { user:@user, book:Book.new} %>
          <div class="col-xs-9">
             <h1>Book detail</h1>
             <table class="table table-hover">
     	        <tbody>
     		       <tr>
     			      <td><%= link_to user_path(@book.user) do %>
                  <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %><%= @user.name %>
                      <% end %>
                      </td>
     			      <td><%= @book.title %></td>
     			      <td><%= @book.body %></td>
                         <% if @book.user == current_user %>
                            <td class="btn btn-success"><%= link_to "Edit",edit_book_path(@book.id) %></td>
     			            <td class="btn btn-danger"><%= link_to "Destroy",book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"} %></td>
                         <% end %>
     		       </tr>
     	        </tbody>
            </table>
          </div>
       </div>
   </div>
</div>