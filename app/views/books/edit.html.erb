<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
　<% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <% @book.errors.full_messages.each do |message| %>
    <%= message %> error
    <% end %>
    <% end %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <% end %>
  <%= link_to "Show",book_path(@book.id) %><%= "|" %><%= link_to "Back", "/books" %>