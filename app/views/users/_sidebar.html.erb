<div class = "col-xs-3">
   <div class= "profile">
      <h1>User info</h1>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
         <table>
           <tbody>
             <tr>
              <th>name</th><td><%= user.name %></td>
             </tr>
             <tr>
               <th>introduction</th><td> <%= user.introduction %></td>
             </tr>
           </tbody>
         </table>
         <!-- 編集ボタン -->
                  <p><%= link_to edit_user_path(user) do %>
             <span class="glyphicon glyphicon-wrench btn btn-default create_btn" aria-hidden="true"></span></p>
             　　　<% end %>
    </div>
<!-- 新規投稿 -->
   <h1>New book</h1>
      <div class= "new_book">
	      <%= form_for(book) do |f| %>
	         <h4>Title</h4>
          <%= f.text_field :title %>
             <h4>Opinion</h4>
          <%= f.text_area :body %>
          <p><%= f.submit 'Create book',class: "btn btn-primary" %></p>

	      <% end %>
    </div>
</div>