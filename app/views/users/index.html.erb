<div class="body">
	<div class="container">
		<div class="row">
           <%= render 'users/sidebar',user: current_user,book: @book %>
              <div class="col-xs-9">
                <h1>Users</h1>
                 <table class="table table-hover">
                    <thead>
 	                   <tr>
 	                      <th>image</th>
                        <th>name</th>
 	                   </tr>
                    </thead>
 		            <tbody>
 		               <% @users.each do |user| %>
 		                  <tr>
 			                 <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %></td>
 			                 <td><%= user.name %></td>
 			                 <td><%= link_to "Show",user_path(user.id)%></td>
 		                  </tr>
 		                <% end %>
 	                </tbody>
                 </table>
                </div>
        </div>
    </div>
</div>