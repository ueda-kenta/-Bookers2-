<h1>マイページ</h1>
<!-- エラー文表示 -->
<% @user.errors.full_messages.each do |message| %>
   <div class="form-error">
   	  <%= message %>
    </div>
<% end %>
<% @book.errors.full_messages.each do |message| %>
   <div class="form-error">
      <%= message %>
    </div>
    <% end %>
<div class = "side_bar">
   <div class= "profile">
      <h2>User info</h2>
   <!-- プロフィール表示 -->
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
         <p>name</p>
            <%= @user.name %>
         <p>introduction</p>
            <%= @user.introduction %>
         <!-- 編集ボタン -->
         <% if @user.id == current_user.id %>
           <p><%= link_to "プロフィール編集", edit_user_path(@user)%></p>
         <% end %>
    </div>
<!-- 新規投稿 -->
   <h1>New book</h1>
      <div class= "new_book">
	      <%= form_for(@book) do |f| %>
	         <h4>タイトル</h4>
          <%= f.text_field :title %>
             <h4>本文</h4>
          <%= f.text_area :body %>
          <%= f.submit '投稿' %>

	      <% end %>
    </div>
</div>

<div class ="mybook_index">
	<h2>Book detail</h2>
	<table>
	   <thead>
		 <tr>
			<th>Title</th>
			<th>Opinion</th>
		 </tr>
	   </thead>
	  <tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
	        <%= @user.name %></td>
			<td class="title_area"><%= book.title %></td>
			<td class= "body_area"><%= book.body %></td>
		</tr>
		<% end %>
	  </tbody>
    </table>
</div>
