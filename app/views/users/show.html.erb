<h1>マイページ</h1>
<div class = "side_bar">
   <div class= "profile">
      <h2>User info</h2>
   <!-- プロフィール表示 -->
        <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
         <p>name</p>
            <%= @user.name %>
         <p>introduction</p>
            <%= @user.introduction %>
         <!-- 編集ボタン -->
         <% if @user.id == current_user.id %>
           <p><%= link_to "プロフィール編集", edit_user_path(@user)%></p>
         <% end %>
    </div>
<!-- 新規投稿 -->
   <h1>New book</h1>
      <div class= "new_book">
	      <%= form_for(@book) do |f| %>
	         <h4>タイトル</h4>
          <%= f.text_field :title %>
             <h4>本文</h4>
          <%= f.text_area :body %>
          <%= f.submit '投稿' %>

	      <% end %>
    </div>
</div>

