<h1>マイページ</h1>
<div class= "profile">
   <h2>User info</h2>
   <!-- プロフィール画像 -->
     <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
      <p>name</p>
         <%= @user.name %>
      <p>introduction</p>
         <%= @user.introduction %>
         <!-- 編集ボタン -->
         <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user)%></p>
       <% end %>
</div>

