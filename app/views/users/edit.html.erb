<div class="body">
<!-- エラー文表示 -->
<% @user.errors.full_messages.each do |message| %>
   <div class="form-error">
   	  <%= message %>error
    </div>
<% end %>
<div class="container">
	<div class="low">
		<div class="col-md-6 col-md-offset-3">
			<h1>User info</h1>
			<!-- プロフィール編集 -->
			<%= form_for(@user) do |f| %>
			<p>Name<%= f.text_field :name, autofocus: true, placeholder:"名前"%></p>
			<!-- 画像編集 -->
			<div>
				<%= attachment_image_tag @user, :profile_image,format: 'jpeg', size: "100x100", fallback: "no_image.jpg" %>
				<p>Image</p>
				<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
				<!-- introduction -->
				<p>introduction<%= f.text_area :introduction, autofocus: true, placeholder:"introduction" %></p>
			</div>
			<%= f.submit "Update User", class: "btn btn-lg btn-block btn-base-1 mt-20" %>
			<% end %>
		</div>
	</div>
</div>
</div>